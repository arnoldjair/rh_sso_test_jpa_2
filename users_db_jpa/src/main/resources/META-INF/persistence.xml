<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="
        http://java.sun.com/xml/ns/persistence
        http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="user-store">
        <jta-data-source>java:jboss/datasources/PasswordDB</jta-data-source>
        <class>com.gorgosoft.jpa.user.UserEntity</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="none"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false"/>
            <!--property name="hibernate.connection.datasource" value="java:jboss/datasources/PasswordDB"/-->
            <!--property name="jakarta.persistence.transactionType" value="JTA" /-->
        </properties>
    </persistence-unit>
</persistence>
